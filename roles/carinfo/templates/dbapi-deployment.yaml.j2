apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: "dbapi-{{ app-version }}"
    version: "{{ app-version }}"
  name: "dbapi-{{ app-version }}"
spec:
  replicas: 1
  selector:
    matchLabels:
      app: "dbapi-{{ app-version }}"
  template:
    metadata:
      labels:
        app: "dbapi-{{ app-version }}"
    spec:
      containers:
      - image: quay.io/two.oes/carinfo-dbapi:latest
        name: "dbapi-{{ app-version }}"
        serviceAccount: default
        serviceAccountName: default
        ports:
        - containerPort: 8080
        env:
        - name: DB_NAME
          value: carinfo
        - name: DB_USER
          value: carinfo
        - name: DB_PASSWORD
          value: CarInfoPass
        - name: SET_DELAY
          value: "{{ set_delay | default('no') }}"
        - name: DB_HOST
          value: mariadb